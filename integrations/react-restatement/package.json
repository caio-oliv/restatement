{
	"name": "react-restatement",
	"version": "0.1.0-rc.1",
	"description": "remote state management for react",
	"author": "Caio Oliveira <caio.vsoliveira23@gmail.com>",
	"homepage": "https://github.com/caio-oliv/restatement#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/caio-oliv/restatement.git"
	},
	"bugs": {
		"url": "https://github.com/caio-oliv/restatement/issues"
	},
	"keywords": [
		"state",
		"async",
		"remote",
		"remote-state",
		"typescript",
		"frontent",
		"react"
	],
	"private": false,
	"license": "MIT",
	"type": "module",
	"source": "src/lib.ts",
	"main": "dist/lib-esm.js",
	"types": "dist/lib-type.d.ts",
	"exports": {
		"import": {
			"types": "./dist/lib-type.d.ts",
			"default": "./dist/lib-esm.js"
		},
		"require": {
			"types": "./dist/lib-type.d.ts",
			"default": "./dist/lib-common.js"
		},
		"default": "./dist/lib-esm.js"
	},
	"sideEffects": false,
	"files": [
		"dist/*"
	],
	"scripts": {
		"check:type": "tsc --noEmit",
		"check:lint": "eslint --config ../../eslint.config.ts",
		"check:all": "run-z check test build",
		"check": "run-z check:type,check:lint",
		"build:js": "rollup --config ../../rollup.config.js",
		"build:type": "dts-bundle-generator src/lib.ts --no-check --out-file 'dist/lib-type.d.ts'",
		"build": "run-z clear:build build:js,build:type",
		"test": "vitest run",
		"test:cov": "vitest run --bail 1 --coverage",
		"bench": "vitest bench --run",
		"clear:coverage": "rimraf coverage",
		"clear:build": "rimraf dist",
		"clear": "rimraf dist coverage"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.6",
		"@eslint/js": "^9.19.0",
		"@rollup/plugin-typescript": "^12.1.3",
		"@testing-library/react": "^16.3.0",
		"@types/react": "^18.3.23",
		"@vitejs/plugin-react": "^4.5.2",
		"@vitest/coverage-v8": "^3.0.5",
		"dts-bundle-generator": "^9.5.1",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-jsdoc": "^50.6.3",
		"eslint-plugin-prettier": "^5.2.3",
		"glob": "^11.0.1",
		"jiti": "^2.4.2",
		"jsdom": "^26.1.0",
		"lru-cache": "^11.0.2",
		"prettier": "^3.4.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"restatement": "0.4.0-rc.3",
		"rimraf": "^6.0.1",
		"rollup": "^4.43.0",
		"run-z": "^2.1.0",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.23.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"react": "^18 || ^19",
		"restatement": "0.4.0-rc.3"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": false
		},
		"restatement": {
			"optional": false
		}
	},
	"packageManager": "pnpm@8.15.0",
	"devEngines": {
		"packageManager": {
			"name": "pnpm",
			"onFail": "error"
		}
	}
}
